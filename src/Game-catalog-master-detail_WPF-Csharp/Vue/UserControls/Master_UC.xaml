<UserControl x:Class="Vue.UserControls.Master_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{Binding Source_Image}" Stretch="UniformToFill"/>
        </Grid.Background>
        <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" CornerRadius="3,3,0,0" BorderBrush="#99000000" BorderThickness="4,2,4,0">
            <TextBlock Text="{Binding Titre}" Background="#99000000"/>
        </Border>
    </Grid>
</UserControl>
